<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysteryNumberGame.MainPage">

    <ScrollView>

        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Start">
            <Label 
            Text="Devinez le nombre mystère entre 1 et 100"
            HorizontalOptions="Center"/>

            <Entry 
            x:Name="userInput"
            Placeholder="Entrez votre nombre"
            Keyboard="Numeric"/>

            <Button 
            Text="Vérifier"
            Clicked="OnCheckClicked"/>

            <Label 
            x:Name="resultLabel"
            TextColor="Gray"
            HorizontalOptions="Center"/>
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
